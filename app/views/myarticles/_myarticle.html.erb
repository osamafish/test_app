<div class="container">
  <% @myarticles.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%# by <%= article.myuser.username if article.myuser %>
            <% if article.myuser %>
              by <%= link_to article.myuser.username, myuser_path(article.myuser) %>
            <% end %>
          </div>

          <% if article.categories.any? %>
            <div class="mt-2"> 
              <%# <%= render 'categories/category', obj: article %> 
              <%= render article.categories %>
              </div> 
          <% end %>

          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, myarticle_path(article), class: "text-success" %></h5>
            <p class="card-text"><%= truncate(article.description, length: 100) %></p>
            <%= link_to "View", myarticle_path(article), class: "btn btn-outline-success" %>

            <% if logged_in? && (article.myuser == current_user || current_user.admin?) %>
              <%= link_to "Edit", edit_myarticle_path(article), class: "btn btn-outline-info" %>
              <%= link_to "Delete", myarticle_path(article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
            <% end %>


            <%# <%= link_to "Edit", edit_myarticle_path(article), class: "btn btn-outline-info" %>
            <%# <%= link_to "Delete", myarticle_path(article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(article.created_at) %> ago, 
            edited <%= time_ago_in_words(article.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div> 