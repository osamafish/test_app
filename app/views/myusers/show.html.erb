<h1 class="text-center mt-4"><%= @myuser.username %>'s profile</h1>

<%= gravatar_for @myuser, size: 200 %>

<div class="text-center mt-4">
  <% if logged_in? && @myuser == current_user %>
    <%= link_to "Edit your profile", edit_myuser_path(@myuser), class: "btn btn-outline-info" %>
  <% end %>

</div>

<h3 class="text-center mt-4">Articles</h3>

<div class="flickr_pagination">
  <%= will_paginate @myarticles, :container => false %>
</div>

<%= render 'myarticles/myarticle' %>

<div class="flickr_pagination mb-4">
  <%= will_paginate @myarticles, :container => false %>
</div>